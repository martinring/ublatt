{
    "name": "ublatt",
    "version": "1.0.0",
    "description": "An interactive exercise sheet generator",
    "homepage": "https://github.com/martinring/ublatt",
    "license": "MIT",
    "bugs": "https://github.com/martinring/ublatt/issues",
    "scripts": {
        "build": "npm run build:js && npm run build:css",
        "build:js": "rollup --config",
        "build:css": "postcss src/*.css src/**/*.css --base src --dir dist",
        "clean": "rm -rf dist"
    },
    "author": "Martin Ring <martin.ring@dfki.de> (https://www.martinring.de)",    
    "repository": "github:martinring/ublatt",
    "type": "module",
    "bin": "bin/ublatt.sh",
    "os" : [ "darwin", "linux" ],
    "dependencies": {
        "@icon/font-awesome": "^4.7.0-2",
        "codemirror": "^5.58.2",
        "katex": "^0.12.0",
        "markdown-it": "^12.0.2",
        "markdown-it-container": "^3.0.0",
        "mermaid": "^8.8.3",
        "prismjs": "1.21.0",
        "typeface-jetbrains-mono": "2.0.0",
        "typeface-tex-gyre-pagella": "0.0.44"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "16.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "9.0.0",
        "@rollup/plugin-typescript": "^6.1.0",
        "@types/codemirror": "^0.0.98",
        "@types/katex": "^0.11.0",
        "@types/markdown-it": "^10.0.3",
        "@types/mermaid": "8.2.1",
        "@types/prismjs": "1.9.0",
        "cssnano": "4.1.10",
        "postcss-cli": "8.3.0",
        "postcss-import": "13.0.0",
        "postcss-url": "^10.1.0",
        "rollup": "^2.33.3",
        "tslib": "2.0.1",
        "typescript": "^4.1.2"
    }
}
