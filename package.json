{
    "name": "ublatt",
    "files": [
        "*",
        "dist/*"
    ],
    "main": "dist/ublatt.js",
    "version": "1.3.0",
    "description": "An interactive exercise sheet generator",
    "homepage": "https://github.com/martinring/ublatt",
    "license": "MIT",
    "bugs": "https://github.com/martinring/ublatt/issues",
    "scripts": {
        "build": "npm run build:runtime:js && npm run build:runtime:css && npm run build:cli",
        "build:runtime:js": "./build.js",
        "build:runtime:css": "postcss src/runtime/*.css src/runtime/**/*.css --base src/runtime --dir dist",
        "build:cli": "./build-cli.js",
        "clean": "rm -rf dist"
    },
    "author": "Martin Ring <martin.ring@dfki.de> (https://www.martinring.de)",
    "repository": "github:martinring/ublatt",
    "type": "module",
    "bin": {
        "ublatt": "bin/ublatt.js"
    },
    "os": [
        "darwin",
        "linux"
    ],
    "dependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-typescript": "7.12.7",
        "babel-preset-solid": "0.23.8",
        "codejar": "3.2.3",
        "esbuild": "^0.8.31",
        "esbuild-solid": "^0.0.1",
        "handlebars": "^4.7.6",
        "katex": "^0.12.0",
        "markdown-it": "^12.0.4",
        "markdown-it-attrs": "^4.0.0",
        "markdown-it-bracketed-spans": "^1.0.1",
        "markdown-it-container": "^3.0.0",
        "markdown-it-header-sections": "^1.0.0",
        "markdown-it-texmath": "0.8.0",
        "mermaid": "8.9.0",
        "prismjs": "1.21.0",
        "punycode": "^2.1.1",
        "solid-js": "0.23.8",
        "yaml": "^1.10.0",
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "@types/babel__core": "^7.1.12",
        "@types/katex": "^0.11.0",
        "@types/markdown-it": "^12.0.1",
        "@types/markdown-it-container": "^2.0.3",
        "@types/mermaid": "8.2.1",
        "@types/node": "^14.14.19",
        "@types/prismjs": "1.9.0",
        "cssnano": "^4.1.10",
        "postcss": "^8.1.8",
        "postcss-cli": "^8.3.1",
        "postcss-import": "13.0.0",
        "postcss-url": "^10.1.0",
        "tslib": "2.1.0",
        "typescript": "^4.1.3"
    }
}
