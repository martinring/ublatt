{
    "name": "ublatt",
    "files": [
        "*",
        "dist/*"
    ],
    "main": "dist/ublatt.js",
    "version": "1.2.0",
    "description": "An interactive exercise sheet generator",
    "homepage": "https://github.com/martinring/ublatt",
    "license": "MIT",
    "bugs": "https://github.com/martinring/ublatt/issues",
    "scripts": {
        "build": "npm run build:runtime:js && npm run build:runtime:css && npm run build:cli",
        "build:runtime:js": "rollup --config",
        "build:runtime:css": "postcss src/runtime/*.css src/runtime/**/*.css --base src/runtime --dir dist",
        "build:cli": "./build-cli.js",
        "clean": "rm -rf dist"
    },
    "author": "Martin Ring <martin.ring@dfki.de> (https://www.martinring.de)",
    "repository": "github:martinring/ublatt",
    "type": "module",
    "bin": {
        "ublatt": "bin/ublatt.js"
    },
    "os": [
        "darwin",
        "linux"
    ],
    "dependencies": {
        "@codemirror/next": "^0.14.0",
        "@fortawesome/fontawesome-free": "5.14.0",
        "@rollup/plugin-virtual": "2.0.3",
        "esbuild": "0.8.11",
        "handlebars": "4.7.6",
        "imapflow": "^1.0.51",
        "jointjs": "3.2.0",
        "katex": "^0.12.0",
        "markdown-it": "^11.0.0",
        "markdown-it-attrs": "^3.0.3",
        "markdown-it-bracketed-spans": "^1.0.1",
        "markdown-it-container": "^3.0.0",
        "markdown-it-header-sections": "^1.0.0",
        "markdown-it-texmath": "0.8.0",
        "mermaid": "^8.8.3",
        "nomnoml": "^1.3.1",
        "prismjs": "1.21.0",
        "rollup": "^2.33.3",
        "rollup-plugin-includepaths": "0.2.4",
        "typeface-jetbrains-mono": "2.0.0",
        "typeface-tex-gyre-pagella": "0.0.44",
        "yaml": "^1.10.0",
        "yargs": "16.1.1"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "16.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "9.0.0",
        "@rollup/plugin-typescript": "^6.1.0",
        "@types/katex": "^0.11.0",
        "@types/markdown-it": "^10.0.3",
        "@types/markdown-it-container": "^2.0.3",
        "@types/mermaid": "^8.2.1",        
        "cssnano": "^4.1.10",
        "lezer-generator": "^0.12.0",
        "postcss": "^8.1.10",
        "postcss-cli": "8.3.0",
        "postcss-import": "13.0.0",
        "postcss-url": "^10.1.0",
        "ts-node": "^9.0.0",
        "tslib": "2.0.1",
        "typescript": "^4.1.2"
    }
}
