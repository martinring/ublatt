{
    "include": ["."],
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": ["ES6","ESNext.String"],
        "module": "ES2020",
        "esModuleInterop": true,
        "rootDir": ".",
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "references": [
        { "path": "../shared" }        
    ],
    "typeAcquisition": {
        "enable": true
    }
}